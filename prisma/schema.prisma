generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SymptomCategory {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  details   String    @default("")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  formulas  Formula[]
  symptoms  Symptom[]

  @@map("symptom_categories")
}

model Formula {
  id                 Int              @id @default(autoincrement())
  name               String           @unique
  name2              String           @map("name_2")
  name3              String           @map("name_3")
  name4              String           @default("") @map("name_4")
  shortDescription   String           @default("") @map("short_description")
  supports           String           @default("") @map("supports")
  specialDetails     String           @default("") @map("special_details")
  extraDetails       String           @default("") @map("extra_details")
  symptomCategoryId  Int              @map("symptom_category_id")
  createdAt          DateTime         @default(now()) @map("created_at")
  updatedAt          DateTime         @updatedAt @map("updated_at")
  symptomCategory    SymptomCategory  @relation(fields: [symptomCategoryId], references: [id])

  @@map("formulas")
}

model Symptom {
  id                 Int              @id @default(autoincrement())
  highIndications    Json             @map("high_indications")
  lowIndications     Json             @map("low_indications")
  symptomCategoryId  Int              @map("symptom_category_id")
  createdAt          DateTime         @default(now()) @map("created_at")
  updatedAt          DateTime         @updatedAt @map("updated_at")
  symptomCategory    SymptomCategory  @relation(fields: [symptomCategoryId], references: [id])

  @@map("symptoms")
}

model QuizSession {
  id                Int                @id @default(autoincrement())
  sessionId         String             @unique @map("session_id")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  selectedSymptoms  SelectedSymptom[]

  @@map("quiz_sessions")
}

model SelectedSymptom {
  id                     Int          @id @default(autoincrement())
  sessionId              String       @map("session_id")
  categoryId             Int          @map("category_id")
  selectedHighSymptoms   Json         @map("selected_high_symptoms") // Array of selected high indication strings
  selectedLowSymptoms    Json         @map("selected_low_symptoms")  // Array of selected low indication strings
  createdAt              DateTime     @default(now()) @map("created_at")
  updatedAt              DateTime     @updatedAt @map("updated_at")
  quizSession            QuizSession  @relation(fields: [sessionId], references: [sessionId])

  @@map("selected_symptoms")
}
